<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |a| %>
      <option value="<%= a.name %>">
    <% end %>
  </datalist>

  <br><br>
  
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <br><br>

  <%= f.label :song_notes %>
  <input id="song_notes_1" name="song[note_ids][]" value=1>
  <input id="song_notes_2" name="song[note_ids][]" value=2>
  

  
  


  <br><br>

  <%= f.submit %>
<% end %>


